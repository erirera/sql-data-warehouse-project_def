INSERT INTO
	SILVER.ERP_PX_CAT_G1V2 (ID, CAT, SUBCAT, MAINTENANCE)
SELECT
	ID,
	CAT,
	SUBCAT,
	MAINTENANCE
FROM
	BRONZE.ERP_PX_CAT_G1V2;

--- the above was achieved after following the processes below
-- CHECK FOR UNWANTED SPACES
SELECT
	*
FROM
	BRONZE.ERP_PX_CAT_G1V2
WHERE
	CAT <> TRIM(CAT)
	OR SUBCAT <> TRIM(SUBCAT)
	OR MAINTENANCE <> TRIM(MAINTENANCE);

-- data standardization & consistency
SELECT DISTINCT
	CAT
FROM
	BRONZE.ERP_PX_CAT_G1V2;

SELECT DISTINCT
	SUBCAT
FROM
	BRONZE.ERP_PX_CAT_G1V2;

SELECT DISTINCT
	MAINTENANCE
FROM
	BRONZE.ERP_PX_CAT_G1V2;
