-- Create stored procedure to load bronze data from CSV files located at /import_data in the container
CREATE OR REPLACE PROCEDURE load_bronze_data()
LANGUAGE plpgsql
AS $$
BEGIN
    -- Load customer info
    COPY bronze.crm_cust_info(
        cst_id, cst_key, cst_firstname, cst_lastname,
        cst_marital_status, cst_gndr, cst_create_date
    )
    FROM '/import_data/CUST_INFO.csv'
    WITH (FORMAT csv, DELIMITER ',', HEADER true, ENCODING 'UTF8', QUOTE '"', ESCAPE '''');

    -- Load product info
    COPY bronze.crm_prd_info(
        prd_id, prd_key, prd_nm, prd_cost,
        prd_line, prd_start_dt, prd_end_dt
    )
    FROM '/import_data/PRD_INFO.csv'
    WITH (FORMAT csv, DELIMITER ',', HEADER true, ENCODING 'UTF8', QUOTE '"', ESCAPE '''');

    -- Load ERP customer demographics
    COPY bronze.erp_cust_az12(cid, bdate, gen)
    FROM '/import_data/CUST_AZ12.csv'
    WITH (FORMAT csv, DELIMITER ',', HEADER true, ENCODING 'UTF8', QUOTE '"', ESCAPE '''');

    -- Load ERP product categories
    COPY bronze.erp_px_cat_g1v2(id, cat, subcat, maintenance)
    FROM '/import_data/PX_CAT_G1V2.csv'
    WITH (FORMAT csv, DELIMITER ',', HEADER true, ENCODING 'UTF8', QUOTE '"', ESCAPE '''');

    -- Load CRM sales details
    COPY bronze.crm_sales_details(
        sls_ord_num, sls_prd_key, sls_cust_id,
        sls_order_dt, sls_ship_dt, sls_due_dt,
        sls_sales, sls_quantity, sls_price
    )
    FROM '/import_data/SALES_DETAILS.csv'
    WITH (FORMAT csv, DELIMITER ',', HEADER true, ENCODING 'UTF8', QUOTE '"', ESCAPE '''');

    -- Load ERP location data
    COPY bronze.erp_loc_a101(cid, cntry)
    FROM '/import_data/LOC_A101.csv'
    WITH (FORMAT csv, DELIMITER ',', HEADER true, ENCODING 'UTF8', QUOTE '"', ESCAPE '''');
END;
$$;
